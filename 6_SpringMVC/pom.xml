    <junit.version>4.12</junit.version>
    <spring.version>4.0.0.RELEASE</spring.version>
    <commons-logging.version>1.1.3</commons-logging.version>
  </properties>


  <dependencies>
    <!--开始导包-->

    <!--文件上传-->
    <dependency>
      <groupId>commons-io</groupId>
