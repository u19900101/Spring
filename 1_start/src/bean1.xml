<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--默认调用了无参构造器-->
<bean id="user" class="User"></bean>

    <!--演示属性注入-->
<bean id="person" class="Person" p:age="20" p:name="p:静静">
    <!--构造器注入属性 早于 set方法  ，最后的结果为set 方法的注入-->
     <!--1.set方法 注入属性-->
    <property name="name" value="静静"></property>
    <property name="age" value="18"></property>

    <!--2.构造器注入属性-->
    <constructor-arg name="name" value="静静_con"></constructor-arg>
    <constructor-arg name="age" value="19"></constructor-arg>
</bean>
    <!--3.p标签注入-->
    <!--<bean id="person" class="Person" p:age="20" p:name="p:静静"></bean>-->
</beans>